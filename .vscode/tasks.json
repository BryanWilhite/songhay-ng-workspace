{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ng test: test by selected project",
            "type": "shell",
            "command": "ng",
            "args": [
                "test",
                "--project=${selectedText}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/songhay"
            },
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build",
            "path": "songhay/",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "build:index",
            "path": "songhay/",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "type": "npm",
            "script": "pack",
            "path": "songhay/",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "start",
            "path": "songhay/",
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "typedoc for @songhay/core: generate docs",
            "type": "shell",
            "command": "typedoc",
            "args": [
                "--exclude",
                "'**/*.spec.ts'",
                "--mode",
                "modules",
                "--tsconfig",
                "./songhay/tsconfig.json",
                "--out",
                "./docs/core",
                "./songhay/projects/songhay/core/src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "typedoc for @songhay/index: generate docs",
            "type": "shell",
            "command": "typedoc",
            "args": [
                "--exclude",
                "'**/*.spec.ts'",
                "--mode",
                "modules",
                "--tsconfig",
                "./songhay/tsconfig.json",
                "--out",
                "./docs/index",
                "./songhay/projects/songhay/index/src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "typedoc for @songhay/player-video-you-tube: generate docs",
            "type": "shell",
            "command": "typedoc",
            "args": [
                "--exclude",
                "'**/*.spec.ts'",
                "--mode",
                "modules",
                "--tsconfig",
                "./songhay/tsconfig.json",
                "--out",
                "./docs/player-video-you-tube",
                "./songhay/projects/songhay/player-video-you-tube/src"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "typedoc: add .nojekyll file for GitHub",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "linux": {
                "command": "touch",
                "args": [
                    ".nojekyll"
                ]
            },
            "windows": {
                "command": "New-Item",
                "args": [
                    "-ItemType",
                    "file",
                    ".nojekyll"
                ]
            },
            "problemMatcher": []
        }
    ]
}